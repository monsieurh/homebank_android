<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="budget.homebank.monsieur_h.homebudget.activities.AboutActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/hb"
                tools:text="@string/about_homebank"
                android:text="@string/about_homebank"
                android:clickable="true"
                android:linksClickable="true"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8sp"
                android:background="@android:color/darker_gray"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hba"
                tools:text="@string/about_companion"
                android:text="@string/about_companion"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8sp"
                android:background="@android:color/darker_gray"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/authors"
                tools:text="@string/about_authors"
                android:text="@string/about_authors"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8sp"
                android:background="@android:color/darker_gray"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/help"
                tools:text="@string/about_help"
                android:text="@string/about_help"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

    </LinearLayout>
</RelativeLayout>
